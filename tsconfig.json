{
  "include": ["src", "./vitest.setup.ts"],
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "strict": true,
    "rootDir": "./",
    "paths": {
      "@/*": ["./src/*"]
    },
    "moduleResolution": "node",
    "types": ["vitest/globals"]
  },
  "exclude": ["node_modules"]
}
